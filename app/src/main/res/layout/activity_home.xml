<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TOP BAR -->
    <View
        android:id="@+id/balken"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="#ADD1EF"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deineReisen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deine Reisen"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:elevation="51dp"
        app:layout_constraintTop_toTopOf="@id/balken"
        app:layout_constraintBottom_toBottomOf="@id/balken"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/navigation_btn"
        android:layout_width="48dp"
        android:layout_height="56dp"
        android:layout_marginEnd="20dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="50dp"
        android:translationZ="50dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/navigation"
        app:layout_constraintTop_toTopOf="@id/balken"
        app:layout_constraintBottom_toBottomOf="@id/balken"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- CONTENT -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/balken"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/suchen"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/search_background"
                android:hint="suchen..."
                android:paddingStart="12dp"
                android:singleLine="true" />

            <LinearLayout
                android:id="@+id/tripsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- NAVIGATION -->
    <include
        android:id="@+id/nav_include"
        layout="@layout/navigation_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
